<div class="register-login-body">
    <div class='form register-login-column form-column'>
        <form method='POST' id='login-form' class='inside-form'>
            <p class="form-header">Login</p>

            <div class='input-fields-div'>
                <label for="email">Email: {{#if tryAgain}}*{{/if}}  </label>
                <input id='email' name='email' type="text" minlength="2">

                <label for="password">Password: {{#if tryAgain}}*{{/if}}  </label>
                <input id='password' name='password' type="password" minlength="2">
            </div>

            {{#if tryAgain}}
            <p class="errorMessage">Woops! Looks like something went wrong. Please try again.</p>
            <p>*<span class="errorMessage2">Mandatory fields</span></p>
            {{/if}}

            <input type="hidden" name="_csrf" value="{{csrfToken}}">

            <button class='submit submit-login'>Login</button>
        </form>

        <div class='goTo-link'>Go to <a href="/register" id='register-link'>Register</a></div>

    </div>

   {{> login_register_info}}

</div>